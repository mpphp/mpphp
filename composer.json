{
    "name": "mpphp/mpphp",
    "description": "Micro Procedural PHP framework",
    "keywords": ["php", "procedural", "framework", "mpphp"],
    "type": "project",
    "license": "MIT",
    "homepage": "https://mpphp.github.io/mpphp/",
    "authors": [
        {
            "name": "Anitche Chisom",
            "email": "anitchec.dev@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "mpphp/core": "dev-master"
    },
    "autoload": {
        "files": [
            "env.php"
        ]
    },
    "repositories":  [
        {
            "type": "path",
            "url": "/home/tsommie/Documents/Apps/mpphp/core"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('env.php') || copy('env.example.php', 'env.php');\""
        ]
    }
}
